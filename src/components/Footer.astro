---
import { getSettings } from '../api/getSettings';
import { InstagramIco } from '../utils/ico';
const today = new Date();
const { instagram, phone } = await getSettings()
---

<footer>
	<div class="social-links">
		<a href={instagram} target="_blank">
			<span class="sr-only">suivez moi sur instagram</span>
            <span class="ico"><InstagramIco/></span>
            <span>Instagram</span>
		</a>
        <a href={'/contact'}>
			<span class="sr-only">envoyez-moi un email</span>
            <span class="ico"><InstagramIco/></span>
            <span>E-mail</span>
		</a>
        <div>
			<span class="sr-only">contactez-moi par téléphone</span>
            <span class="ico"><InstagramIco/></span>
            <span>{phone}</span>
		</div>
	</div>
    &copy; {today.getFullYear()} Valérie Da Silva. Tous droits réservés.
</footer>

<style>
	footer {
        @apply px-lg py-md pb-[8.5rem] lg:pb-md bg-primary/50 text-center;
		.social-links {
            @apply flex items-center justify-center gap-md mb-rg;
            a, > div {
                @apply flex gap-xs items-center;

                .ico {
                    @apply bg-black rounded-full w-lg h-lg flex justify-center items-center;
                    svg {
                        path {
                            @apply stroke-white;
                        }
                        circle {
                            @apply fill-white;
                        }
                    }
                }
               
                &:hover .ico {
                    @apply bg-accent;
                }

                &:hover > span {
                    @apply text-accent font-bold;
                }
            }
          
	    }
	}
</style>
