---
import {getHomepage} from '../api/getPages'

const { services } = await getHomepage()
const {title, items, price, duration} = services
---

<section>
    <div class="illustrations">
        <span><img src="/illu-couple.png" alt="illustration couple"/></span>
        <span><img src="/illu-solo.png" alt="illustration personne seule"/></span>
    </div>
    <article>
        <h2>{title}</h2>
        <div>
            <ul>
                {items.map(item => <li>{item}</li>)}
            </ul>
            <div>
                <h3>{price}€</h3>
                <span>la séance {duration}</span>
            </div>
        </div>
    </article>
</section>

<style>
	section {
        @apply flex gap-xl;

        .illustrations {
            @apply relative w-2/6 h-fit mb-[10vw];
            > span {
                @apply bg-primary rounded-full flex justify-center items-center
                w-[18vw] h-[18vw] shadow-lg;

                > img {
                    @apply scale-75;
                }

                &:last-of-type {
                    @apply absolute -bottom-[10vw] right-0 -z-[1];
                }
            }
        }

        > article {
            @apply flex-1 flex flex-col items-start relative;
            > div {
                ul {
                    @apply pl-md list-image-[url('/list-custom-marker.png')] leading-7;
                    li {
                        @apply pl-xs
                    }
                }
                
                > div {
                    @apply absolute -bottom-xs -right-lg flex flex-col mt-lg;
                    h3 {
                        @apply text-accent/75 text-[148pt] font-italiana -mb-xl;
                    }
                    span {
                        @apply text-h2 text-black/50 font-italiana pl-xs;
                    }
                }
            }
        }
    }
</style>
