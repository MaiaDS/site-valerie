---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import Layout from '../../layouts/Layout.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.publishedDate.valueOf() - b.data.publishedDate.valueOf()
);
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION} >
    <h1 class="sr-only">Blog</h1>
    <ul class="articles">
        {
            posts.map((post) => (
                <li>
                    <a href={`/blog/${post.slug}/`}>
                        <img width={720} height={360} src={post.data.mainImage} alt="" class="rounded-lg" />
                        <hgroup>
                            <h3 class="text-h4 font-italiana uppercase">{post.data.title}</h3>
                            <FormattedDate date={post.data.publishedDate} />
                        </hgroup>
                        
                    </a>
                </li>
            ))
        }
    </ul>
</Layout>

<style>
    .articles {
        @apply flex flex-wrap gap-lg list-none;
        > li {
            width: calc(50% - 1rem);
            a {
                @apply flex flex-col gap-sm;
                * {
                    @apply transition-all block text-center;
                }
            }
            &:hover * {
                @apply text-accent;
            }
            &:hover img {
                @apply shadow-lg scale-[101%];
            }
        }
    }
   
    @media (max-width: 720px) {
        .articles {
            @apply gap-xs;

            li {
                @apply w-full;
            }
        }
    }
</style>